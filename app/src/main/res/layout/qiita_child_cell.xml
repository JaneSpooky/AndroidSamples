<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_rootView"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/child_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/child_titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#AAFFFFFF"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="Kotlinとは"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/child_imageView"
        app:layout_constraintEnd_toEndOf="@id/child_imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/child_imageView" />



    <View
        android:id="@+id/child_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/child_userNameTextView"
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/child_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_favorite_text"
        android:layout_width="91dp"
        android:layout_height="23dp"
        android:text="押したら爆発"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/child_imageView"
        app:layout_constraintTop_toBottomOf="@+id/child_userNameTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>